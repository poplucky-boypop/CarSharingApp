<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="textTitleInput" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/gray</item>
    </style>

    <style name="textHeading" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:color">@color/blackHeading</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="textPar" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/grayCyan</item>
    </style>
    
    <style name="btnFiolStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/shape_button_footer</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/backMainColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>
    
</resources>